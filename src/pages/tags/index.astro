---
import PageLayout from "@/layouts/Base.astro";
import { getAllPosts, getUniqueTagsWithCount } from "@/data/post";
import GoBack from "@/components/GoBack.astro";
import ViewModeSwitch from "@/components/ViewModeSwitch.jsx";
import { getEntry } from 'astro:content';
const siteSettings = await getEntry('siteSettings', 'main');
const defaultView = siteSettings?.data?.defaultView ?? 'default';
const language = await getEntry('language', 'index');

const allPosts = await getAllPosts();
const allTags = getUniqueTagsWithCount(allPosts);

const meta = {
	description: "A list of all the topics I've written about in my posts",
	title: "All Tags",
};
---

<PageLayout meta={meta} themeMode="user">
	<GoBack  />
	<span class="prose prose-lg dark:prose-invert">
		<div data-section-id="tags-page">
			<div class="tags-header" style="display: flex; align-items: center; justify-content: space-between; margin-bottom: 2rem; padding: 0 4%;">
				<h1 class="title my-4" style="margin: 0; flex: 1;">{language?.data?.tags}</h1>
				<ViewModeSwitch 
					sectionId="tags-page" 
					defaultView={defaultView} 
					client:load
				/>
			</div>
			
			<ul class="" style="padding:0 1%; margin:0 auto; width: 99%">
				<div class={`contentpanel section-content ${defaultView === 'swipe' ? 'slider' : 'grid-container'}`} >
				<div class="sliderSpacer"></div>
		
		{
			allTags.map(([tag, val]) => (
				<div class="post-card1 button">
					<a
						class=" inline-block"
						data-astro-prefetch
						href={`/tags/${tag}/`}
						title={`View posts with the tag: ${tag}`}
						 style="display:grid; place-content: center; padding:15vh 25vw;"
					>
						&#35;{tag}
					
					<span class="inline-block">
						 ({val}) {val > 1 && ""}
					</span></a>
				</div></span>
			))
		}



				</div>
			</ul>
		</div>
	</span>
</PageLayout>
